{
    "name": "gun-authd",
    "version": "3.1.0",
    "description": "Deterministic authentication for GunDB using Argon2id + HKDF. Supports optional PIN, rate limiting, and enhanced security. Offline-first, censorship-resistant login.",
    "main": "./dist/gun-authd.min.js",
    "types": "./gun-authd.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/gun-authd.min.js",
            "default": "./dist/gun-authd.min.js"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "esbuild ./src/gun-authd.js --bundle --minify --outfile=./dist/gun-authd.min.js --format=esm --external:gun",
        "test": "node test/unit.test.js",
        "test:alias": "node test/alias-check.test.js",
        "test:all": "node test/unit.test.js && node test/alias-check.test.js"
    },
    "keywords": [
        "gun",
        "gundb",
        "authentication",
        "deterministic",
        "argon2",
        "hkdf",
        "offline",
        "decentralized",
        "p2p"
    ],
    "dependencies": {
        "@noble/curves": "1.9.7",
        "@noble/hashes": "^1.3.2",
        "gun": "^0.2020.1239",
        "hash-wasm": "^4.11.0"
    },
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "esbuild": "^0.27.1"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/scobru/gun-authd.git"
    }
}
